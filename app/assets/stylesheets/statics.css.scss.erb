#Layer-1 {
  margin-left: auto;
  margin-right: auto;
  background-image: url(<%= asset_path 'carousel/Layer-1.png' %>);
  width: 600px;
  height: 195px;
}

#Layer-2 {
  margin: 0px 0px 0px 45px;
  background-image: url(<%= asset_path 'carousel/Layer-2.png' %>);
  width: 510px;
  height: 195px;

}

#Layer-3 {
text-align: center;
  ul, li {
    list-style-type: none;
    padding: 0px;
  }
  ul.nav {
    position: relative;
    padding: 5px 5px;
    left: 30px;
    top: -70px;
    width: 440px;
    height: 38px;
    background-image: url(<%= asset_path 'carousel/Layer-4.png' %>);
      li {
        float: left;
        display: inline;
      }
      img.nav {
        width: 30px;
        height: 30px;
        margin: 5px 0px 0px 0px;
      }
      a.navLink:hover {
        opacity: 0.6;
      }
      img.promoText {
        padding: 5px 10px;
        width: 185px;
        height: 27px;
      }

      a.spriteButton {
        display:block; /* Ссылки будут блоками. */
        width: 135px; /* Ширина блока 175 пикселей по ширине нашей "двойной" картинки */
        height:22px; /* Высота блока 40 - это половина высоты нашей двойной картинки */
        display:block;
        line-height:0px;
        text-align:center;
        background-image: url(<%= asset_path 'carousel/rsz_but.png' %>);
        background-repeat:no-repeat;
        }

      /* Стиль ссылки при наведённом курсоре */
      a.spriteButton:hover {
        background-position:0 -25px;
        color: #fff;
      }
      li.but {
        margin: 9px 15px;
      }
  }
  img.image {
    margin: 10px 0px 0px 0px;
    left: 0px;
    width: 475px;
    height: 190px;
  }
}

.carousel {
  width: 470px;
  height: 180px;
  margin: 0 auto;
  overflow: hidden;

  li {
    display:none;
  }

  .is-showing {
    display: inline;
  }
}

