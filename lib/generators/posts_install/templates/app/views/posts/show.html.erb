<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span12">
        <h4><strong><%= @post.title %></h4>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <a href="#" class="thumbnail">
          <img src="http://placehold.it/260x180" alt="">
        </a>
      </div>
      <div class="span10">
        <p style="text-align: justify; ">
          <%= @post.description %>
        </p>
      </div>
      <div class="span12">
       <%= raw @post.text %>
     </div>
     <div class="span12">
      <p></p>
      <p>
        <i class="icon-user"></i> by <a href="#"><%= @post.user.nickname == nil ? @post.user.email : @post.user.nickname %></a>
        | <i class="icon-calendar"></i> <%= @post.updated_at.strftime("%m/%d/%Y %I:%M%p") %>
        | <i class="icon-comment"></i> <a href="#">3 Comments</a>
        | <i class="icon-share"></i> <a href="#">39 Shares</a>
        | <i class="icon-tags"></i> Tags : <a href="#"><span class="label label-info">Snipp</span></a>
        <a href="#"><span class="label label-info">Bootstrap</span></a>
        <a href="#"><span class="label label-info">UI</span></a>
        <a href="#"><span class="label label-info">growth</span></a>
      </p>
    </div>
  </div>
</div>
<hr>

<%= link_to 'Back', posts_path, class: 'btn' %>
