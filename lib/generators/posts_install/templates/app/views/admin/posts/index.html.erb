<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Description</th>
    <th>Text</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.slug %></td>
    <td><%= post.description %></td>
    <td><%= raw(post.text) %></td>
    <td><%= post.published %></td>
    <td><%= link_to 'Show', admin_post_path(post), class: "btn" %></td>
    <td><%= link_to 'Edit', edit_admin_post_path(post), class: "btn" %></td>
    <td><%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_admin_post_path, class: "btn" %>
